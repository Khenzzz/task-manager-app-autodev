# Task Manager Application Environment Variables
# Copy this file to .env and fill in the actual values for local development

# Flask Configuration
FLASK_APP=app_socketio.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-here
DEBUG=True

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/taskmanager_dev
DB_PRODUCTION=false

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ACCESS_TOKEN_EXPIRES=3600

# Redis Configuration (for WebSocket sessions)
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=your-redis-password-here

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:5000,http://127.0.0.1:5000

# Email Configuration (for notifications)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-email-password-here

# DigitalOcean Configuration (for deployment)
DO_API_TOKEN=your-digitalocean-api-token-here

# Environment Specific
ENVIRONMENT=development
PORT=5000

# Logging Configuration
LOG_LEVEL=INFO
LOG_TO_STDOUT=True

# Feature Flags
WEBSOCKET_ENABLED=True
EMAIL_NOTIFICATIONS_ENABLED=True
REGISTRATION_ENABLED=True

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60
RATELIMIT_STORAGE_URL=redis://localhost:6379/1

# Session Configuration
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# API Configuration
RESTX_MASK_SWAGGER=False
RESTX_VALIDATE=True

# Application Monitoring (optional)
SENTRY_DSN=your-sentry-dsn-here
NEW_RELIC_LICENSE_KEY=your-newrelic-license-key-here
